{
  "manifest_version": 2,
  "name": "Rustvate",
  "version": "1.0",
  "description": "A lightweight, high-performance ad-blocker powered by Rust and WebAssembly.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
