{
  "manifest_version": 2,
  "name": "Rustvate",
  "version": "1.0",
  "description": "A Rust-based ad-blocking extension.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "icons": {
    "48": "icon.png"
  }
}
